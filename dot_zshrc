export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="robbyrussell"

plugins=(git rails)

source $ZSH/oh-my-zsh.sh

# Scripts path
export PATH="$HOME/.local/bin:$PATH"

# VS Code
code () { VSCODE_CWD="$PWD" open -n -b "com.microsoft.VSCode" --args $* ;}

# Direnv
eval "$(direnv hook zsh)"

# pnpm
export PNPM_HOME="/Users/kyalex/Library/pnpm"
case ":$PATH:" in
  *":$PNPM_HOME:"*) ;;
  *) export PATH="$PNPM_HOME:$PATH" ;;
esac

# fzf
source <(fzf --zsh)

# Open Obsidian in Nvim
alias obs="nvim ~/Library/Mobile\ Documents/iCloud\~md\~obsidian/Documents"

# Mise
eval "$(/opt/homebrew/bin/mise activate zsh)"

# OP
claude_op () { ANTHROPIC_API_KEY=$(op read "op://Personal/h6sicja25locqz3za2f6rwdwhy/credential") claude }
